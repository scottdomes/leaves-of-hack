<p id="notice"><%= notice %></p>

<div id="index-banner" class="parallax-container">
  <div class="section no-pad-bot">
    <div class="container">
      <br><br>
      <h1 class="header center text-lighten-2">Poetry for Programmers, by Programmers</h1>
      <div class="row center">
        <h5 class="header col s12 light">Modern, elegant, responsive poetry.</h5>
      </div>
      <div class="row center">
        <a href="http://materializecss.com/getting-started.html" id="download-button" class="btn-large waves-effect waves-light lighten-1">Add a Poem</a>
      </div>
      <br><br>

    </div>
  </div>
  <div class="parallax">
    <%= image_tag 'background1.jpg', alt:"Unsplashed background img 1" %>
  </div>
</div>

<h1 class="page-heading">All Poems</h1>

<% @poems.each do |poem| %>
  <h3><%= poem.title %></h3>
  <pre><p><%= poem.content %></p></pre>
  <p>By: <%= "#{poem.user.firstname} #{poem.user.lastname}" %></p>
<% end %>
<br>

<%= link_to 'New Poem', new_poem_path %>
